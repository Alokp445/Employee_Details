@model Employee_Details.Models.Employee


@{
    ViewData["Title"] = "Signup";
    Layout = "_Layout";
}
<style>
    body {
        margin: 0;
        padding: 0;
        background-image: url('https://img.freepik.com/premium-photo/turquoise-background-with-clear-sky_873925-13399.jpg');
        background-size: cover;
        background-position: center;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }


    .col-md-6 a {
        text-decoration: none;
        margin-left:-83px;
    }
</style>

<h1 style="color:darkred;">New Employee Details</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Signup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label" style="font-size:22px;"></label>
                <input asp-for="Name" class="form-control" style="font-size:20px;width:270px;" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Phone_No" class="control-label" style="font-size:22px;"></label>
                <input asp-for="Phone_No" class="form-control" style="font-size:20px;width:270px;" />
                <span asp-validation-for="Phone_No" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label" style="font-size:22px;"></label>
                <input asp-for="Age" class="form-control" style="font-size:20px;width:270px;" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label" style="font-size:22px;"></label>
                <input asp-for="Address" class="form-control" style="font-size:20px;width:270px;" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label" style="font-size:22px;"></label>
                <input asp-for="Email" class="form-control" style="font-size:20px;width:270px;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label" style="font-size:22px;"></label>
                <input asp-for="Password" class="form-control" style="font-size:20px;width:270px;" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br />
            <div class="row">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <div class="col-md-6">

                        <li class="navbar-nav.ml">
                            <a class="btn btn-primary"  asp-controller="Home" asp-action="Index">Back To Login</a>
                        </li>
                    </div>
                </div>



            </div>

        </form>
    </div>
    <div class="col-md-8">
        <div class="image-container">
            <img src="https://img.freepik.com/premium-vector/work-from-home-illustration-with-copy-space-man-working-with-laptop-desktop-flat-design_115968-28.jpg" alt="Image" style="max-width: 1000%; height: auto;">
        </div>
    </div>
</div>

<style>
    .image-container {
        max-width: 700px; /* Adjust the maximum width of the image container */
        margin: 50px auto 20px;
        margin: 20px; /* Center horizontally */

        background-color: rgba(255, 255, 255, 0.8);
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); /* Optional: add a shadow */
        overflow: hidden;

    }

        .image-container img {
            width: 100%; /* Ensure the image fills the container */
            height: auto;
        }
</style>
}
